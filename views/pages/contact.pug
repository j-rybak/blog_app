extends ../layouts/base

block content
        .row
            .col-xs-12
                .well.well-sm
                    form(action='/contact', method='POST')
                        .row
                            .col-md-6
                                .form-group
                                    label(for='name') Imię
                                    |
                                    input#name.form-control(type='text', placeholder='Wpisz imię', required='required', name='name')
                                .form-group
                                    label(for='email') Adres Email
                                    .input-group
                                        span.input-group-addon
                                            span.fa.fa-envelope
                                        |
                                        input#email.form-control(type='email', placeholder='Wpisz email', required='required', name='email')
                                .form-group
                                    label(for='subject') Temat
                                    |
                                    select#subject.form-control(name='subject', required='required')
                                        option(value='Ogólne', selected='') Wybierz:
                                        option(value='Obsługa klienta') Obsługa klienta
                                        option(value='Sugestje') Sugestje
                            .col-md-6
                                .form-group
                                    label(for='message') Wiadomość
                                    textarea#message.form-control(name='message', rows='9', cols='25', required='required', placeholder='Treść wiadomości')
                            .col-md-12
                                button#btnContactUs.btn.btn-primary.pull-right(type='submit')  Wyślij wiadomość
            .col-xs-12
                form
                    legend
                        span.fa.fa-globe
                        | &nbsp;Biuro
                    address
                        strong Blog App
                        br
                        |
                        a(href='mailto:blogapp@t.pl') blogapp@t.pl