nav.navbar.navbar-inverse.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#')
                icon.fa.fa-newspaper-o
                |  Blog app
        #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
                li(class=url=='/'? "active" : "")
                    a(href='/')
                        icon.fa.fa-home
                        |  Strona główna
                li(class=url.indexOf('posts')!=-1? "active" : "")
                    a(href='/posts')
                        icon.fa.fa-pencil
                        |  Wpisy
                li(class=url=='/contact'? "active" : "")
                    a(href='/contact')
                        icon.fa.fa-envelope
                        |  Kontakt

            ul.nav.navbar-nav.navbar-right
                if authenticated
                    li
                        p.navbar-text
                            icon.fa.fa-user
                            |  Witaj #{user.username}
                    li
                        a(href='/auth/logout')
                            icon.fa.fa-power-off
                            |  Wyloguj
                else

                    li(class=url.indexOf('login')!=-1? "active" : "")
                        a(href='/auth/login')
                            icon.fa.fa-user
                            |  Zaloguj

                    li(class=url.indexOf('register')!=-1? "active" : "")
                        a(href='/auth/register')
                            icon.fa.fa-user-plus
                            |  Załóż konto